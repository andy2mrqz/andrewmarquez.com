{
  "name": "andrewmarquez.com",
  "scripts": {
    "start": "concurrently \"npm:dev:css\" \"npm:serve\"",
    "serve": "serve site",
    "build": "npm run build:css",
    "build:css": "tailwindcss -o site/styles.css --minify",
    "dev:css": "tailwindcss -o site/styles.css --watch"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "serve": "^14.2.4",
    "tailwindcss": "^3.4.17"
  }
}
